generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id        String @id @default(cuid()) @db.VarChar(30)
  name      String
  price     Float
} 

model Transaction {
  id        String @id @default(cuid()) @db.VarChar(30)
  purshedServices 
}

model Order {
  id         String @default(cuid()) @db.VarChar(30)
  serviceIds String[] @id @default(cuid()) @db.VarChar(30)
  service    Service[] @relation(fields:[serviceId], references: [id])

}